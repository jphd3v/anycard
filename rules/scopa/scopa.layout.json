{
  "rulesId": "scopa",
  "rows": 2,
  "cols": 3,
  "zones": [
    {
      "id": "player1-area",
      "label": "Player 1",
      "cell": { "row": 0, "col": 0 },
      "piles": ["P1-hand", "P1-won"]
    },
    {
      "id": "scoreboard-area",
      "label": "Scoreboard",
      "cell": { "row": 0, "col": 1 },
      "piles": [],
      "widget": "scoreboards"
    },
    {
      "id": "player2-area",
      "label": "Player 2",
      "cell": { "row": 0, "col": 2 },
      "piles": ["P2-hand", "P2-won"]
    },
    {
      "id": "table-area",
      "label": "Table",
      "cell": { "row": 1, "col": 0, "colspan": 3 },
      "piles": ["table"]
    }
  ],
  "pileStyles": {
    "P1-hand": {
      "layout": "horizontal",
      "isHand": true,
      "sort": {
        "default": "rank-asc",
        "options": [
          {
            "id": "rank-asc",
            "label": "Rank (Point Order)",
            "type": "byRank",
            "rankOrder": ["2", "4", "5", "6", "7", "J", "Q", "K", "3", "A"]
          },
          {
            "id": "native",
            "label": "Native order",
            "type": "byRank"
          }
        ]
      }
    },
    "P2-hand": {
      "layout": "horizontal",
      "isHand": true,
      "sort": {
        "default": "rank-asc",
        "options": [
          {
            "id": "rank-asc",
            "label": "Rank (Point Order)",
            "type": "byRank",
            "rankOrder": ["2", "4", "5", "6", "7", "J", "Q", "K", "3", "A"]
          },
          {
            "id": "native",
            "label": "Native order",
            "type": "byRank"
          }
        ]
      }
    },
    "P1-won": { "layout": "complete", "showDetails": true },
    "P2-won": { "layout": "complete", "showDetails": true },
    "table": { "layout": "spread" }
  }
}
